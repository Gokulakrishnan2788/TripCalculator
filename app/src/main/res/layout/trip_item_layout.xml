<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/trip_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icn_app">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/trip_img"
            android:layout_margin="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/trip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/info_label"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/trip_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="@string/trip_description"
                android:textColor="@android:color/black"
                android:textSize="@dimen/info_label">
            </TextView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>